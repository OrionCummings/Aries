{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Aries",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#control"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"begin": "/\\*\\*(?!/)",
					"captures": {
						"0": {
							"name": "punctuation.definition.comment.ari"
						}
					},
					"end": "\\*/",
					"name": "comment.block.documentation.ari"
				},
				{
					"begin": "/\\*",
					"captures": {
						"0": {
							"name": "punctuation.definition.comment.ari"
						}
					},
					"end": "\\*/",
					"name": "comment.block.ari"
				},
				{
					"captures": {
						"1": {
							"name": "punctuation.definition.comment.ari"
						}
					},
					"match": "(//).*$\\n?",
					"name": "comment.line.double-slash.ari"
				}
			]
		},
		"operators": {
			"patterns": [
				{
					"name": "keyword.operator.ari",
					"match": "+|-|*|/|%|<<|>>|<<<|>>>|!|&&|(||)|&|(|)|^"
				},
				{
					"name": "keyword.operator.sizeof.ari",
					"match": "(?<![\\w$])(sizeof)(?![\\w$])"
				},
				{
					"name": "keyword.operator.decrement.ari",
					"match": "--"
				},
				{
					"name": "keyword.operator.increment.ari",
					"match": "++"
				},
				{
					"name": "keyword.operator.assignment.compound.ari",
					"match": "%=|\\+=|-=|\\*=|(?<!\\()/=)"
				},
				{
					"name": "keyword.operator.assignment.compound.bitwise.ari",
					"match": "&=|\\^=|<<=|>>=|\\|="
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.ari",
					"match": "\\b(overload|const|static|enum|def|struct|sizeof|std|cast|asm)\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.ari",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.ari",
					"match": "\\\\."
				}
			]
		},
		"numbers": {
			"patterns": [
				{
					"name": "constant.numeric.ari",
					"match": "(^-?[0-9][0-9\\.]+$"
				}
			]
		},
		"control": {
			"patterns": [
				{
					"name": "keyword.control.ari",
					"match": "\\b(if|while|for|switch|case|default|continue|match|return)\\b"
				}
			]
		}
	},
	"scopeName": "source.ari"
}